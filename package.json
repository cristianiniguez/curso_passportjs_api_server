{
  "name": "curso_passport_api_server",
  "version": "1.0.0",
  "description": "API Server desarrollado en el Curso de Autenticaci√≥n con Passport.js de Platzi",
  "scripts": {
    "dev": "cross-env DEBUG=app:* nodemon index",
    "start": "cross-env NODE_ENV=production node index",
    "test": "mocha --exit",
    "cover": "nyc npm run test",
    "report": "nyc report --reporter=html && start coverage/index.html",
    "seed:movies": "cross-env DEBUG=app:* node scripts/mongo/seedMovies.js",
    "seed:users": "cross-env DEBUG=app:* node scripts/mongo/seedUsers.js",
    "seed:apikeys": "cross-env DEBUG=app:* node scripts/mongo/seedApiKeys.js"
  },
  "keywords": [
    "curso",
    "backend",
    "nodejs",
    "express",
    "Platzi"
  ],
  "author": "cristianiniguez <felizpc1@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "bcrypt": "^5.0.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.2",
    "passport": "^0.4.1",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "chalk": "^4.1.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "proxyquire": "^2.1.3",
    "sinon": "^9.0.3",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "nyc": {
    "all": true,
    "include": [
      "routes",
      "services",
      "lib",
      "utils"
    ]
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cristianiniguez/curso_passportjs_api_server.git"
  },
  "bugs": {
    "url": "https://github.com/cristianiniguez/curso_passportjs_api_server/issues"
  },
  "homepage": "https://github.com/cristianiniguez/curso_passportjs_api_server#readme"
}
